@page "/{*route:nonfile}"

@inject ILogger<NotFound> _logger

<PageTitle>Nie znaleziono</PageTitle>

<MudAlert Class="ma-3" Severity="Severity.Info" Variant="Variant.Filled">
	<MudText Typo="Typo.h6">
		Pod podanym adresem nic nie ma
	</MudText>
	<MudText>
		Szukaliśmy, na prawdę!
	</MudText>
</MudAlert>

@code {
	[Parameter]
	public string? Route { get; set; }

	protected override void OnInitialized()
	{
		_logger.LogWarning("Attempted to access non-existent page {PageRoute}", Route);
	}

}