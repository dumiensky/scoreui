@using ScoreUI.Models.Entities
@using ScoreUI.Models.Enums

@if (Match.Status is MatchStatus.Done)
{
	if (ParticipantId == Match.GetWinnerId())
	{
		<div class="green lighten-1 pa-2 white-text rounded">
			<MudIcon Icon="@Icons.Material.Filled.Check" />
		</div>
	}
	else
	{
		<div class="red lighten-1 pa-2 white-text rounded">
			<MudIcon Icon="@Icons.Material.Filled.Cancel" />
		</div>
	}
}

@code {
	[Parameter, EditorRequired]
	public required Match Match { get; set; }
	
	[Parameter, EditorRequired]
	public required Guid ParticipantId { get; set; }
}